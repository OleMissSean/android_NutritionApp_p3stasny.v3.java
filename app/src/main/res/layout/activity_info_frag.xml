<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/TV_nutrName"
            android:layout_gravity="center_horizontal"
            android:hint="Nutrient Name"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/TV_nutrType"
            android:layout_gravity="center_horizontal"
            android:hint="Nutrient Type"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information"
                android:id="@+id/TV_nutrInfoLabel"
                android:gravity="center|center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_nutrInfo"
                android:hint="Tell me all about the selected nutrient."
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_sourcesLabel"
                android:hint="Where can I find the selected nutrient?"
                android:text="Sources"
                android:gravity="center|center_horizontal"
                android:layout_marginTop="7dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_sources"
                android:hint="Where can I find this nutrient?"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

        </LinearLayout>
    </LinearLayout>